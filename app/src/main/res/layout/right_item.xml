<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="@dimen/space_15"
            android:id="@+id/name_tv"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_15sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="@dimen/space_15"
            android:id="@+id/more_tv"
            android:text="更多"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/fontsize_14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <com.quark.wificontrol.ui.widget.NoneScrollGridView
        android:listSelector="@color/transparent"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:gravity="center"
        android:numColumns="2"
        android:scrollbars="none"
        android:stretchMode="columnWidth"></com.quark.wificontrol.ui.widget.NoneScrollGridView>

   <!-- <GridView
        android:listSelector="@color/transparent"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

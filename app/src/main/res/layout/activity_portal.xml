<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="270dp">


        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="@dimen/space_35"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="@dimen/space_35"
            android:layout_below="@+id/iv"
            android:id="@+id/login_bt"
            android:text="会员使用"
            android:textSize="@dimen/fontsize_14sp"
            android:textColor="@color/white"
            android:background="@drawable/button_selector_head"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/space_35"
            android:layout_marginRight="@dimen/space_35"
            android:layout_height="45dp" />

        <LinearLayout
            android:id="@+id/one_ly"
            android:gravity="center"
            android:layout_below="@+id/login_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/qianhuise"
                android:layout_width="75dp"
                android:layout_height="1dp" />
            <TextView
                android:text="或者，不是会员"
                android:textColor="@color/white"
                android:layout_margin="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/qianhuise"
                android:layout_width="75dp"
                android:layout_height="1dp" />
        </LinearLayout>


        <TextView
            android:gravity="center"
            android:layout_below="@+id/one_ly"
            android:id="@+id/trial_tv"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="游客试用"
            android:background="@drawable/common_tab_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ad_iv"
            android:src="@drawable/ad"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/msg_iv"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginTop="@dimen/space_12"
        android:layout_marginBottom="@dimen/space_12"
        android:src="@drawable/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="@dimen/space_13"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_toRightOf="@id/msg_iv"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="@dimen/space_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_tv"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="系统消息助手"
                android:textColor="@color/black"
                android:textSize="@dimen/fontsize_14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/msg_time"
                android:layout_width="wrap_content"
                android:text="16:00"
                android:textColor="@color/qianhuise"
                android:textSize="@dimen/fontsize_14sp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/msg_tv"
            android:textSize="@dimen/fontsize_14sp"
            android:textColor="@color/qianhuise"
            android:layout_marginTop="@dimen/space_10"
            android:text="来自 xxxx的好友请求"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_below="@+id/msg_iv"
        android:background="@color/qianhuise"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"/>

</RelativeLayout>
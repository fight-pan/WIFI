<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/shenchengse"
                    android:textSize="@dimen/fontsize_14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_2" />




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:focusable="true"
                    android:focusableInTouchMode="true">


                    <EditText
                        android:id="@+id/user_et"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edit_style"
                        android:hint="请输入手机号"
                        android:inputType="phone"
                        android:paddingLeft="40dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColorHint="@color/qianhuise"
                        android:textSize="@dimen/fontsize_14sp" />

                    <ImageView
                        android:id="@+id/user_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/user" />

                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/code_ly"
                    android:layout_below="@+id/parent"
                    android:layout_marginTop="@dimen/space_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">






                    <EditText
                        android:drawableLeft="@drawable/sms_code"
                        android:singleLine="true"
                        android:inputType="number"
                        android:hint="请输入验证码"
                        android:textSize="@dimen/fontsize_14sp"
                        android:textColorHint="@color/qianhuise"
                        android:id="@+id/code_et"
                        android:paddingLeft="@dimen/space_10"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"

                        android:background="@drawable/edit_style"
                        android:layout_width="0dp"
                        android:layout_weight="3.5"
                        android:layout_height="45dp" />

                    <Button
                        android:id="@+id/go_code"
                        android:text="发送验证码"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_14sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/button_selector"
                        android:layout_height="45dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/code_ly"
                    android:layout_marginTop="@dimen/space_20"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/pwd_et"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/edit_style"
                        android:digits="@string/register_name_digits"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:paddingLeft="40dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColorHint="@color/qianhuise"
                        android:textSize="@dimen/fontsize_14sp" />

                    <ImageView
                        android:id="@+id/pwd_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:src="@drawable/lock" />

                    <ImageButton
                        android:id="@+id/close_eye_ibt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/close_eye" />


                </RelativeLayout>


            </RelativeLayout>


            <Button
                android:id="@+id/register_bt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/space_49"
                android:background="@drawable/button_selector"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_16sp" />

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/space_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/fontsize_14sp"
                    android:text="点击 “注册” ,代表您同意"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/terms_tv"
                    android:layout_marginLeft="@dimen/space_10"
                    android:text="用户协议"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
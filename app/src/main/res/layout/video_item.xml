<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/video_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginTop="@dimen/space_15"
        android:src="@drawable/video" />


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_15"
        android:layout_toRightOf="@+id/video_iv"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="这里是标题 最多三行"
        android:textColor="@color/black"
        android:textSize="@dimen/fontsize_14sp" />


    <LinearLayout
        android:layout_marginLeft="@dimen/space_12"
        android:layout_toRightOf="@+id/video_iv"
        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_tv"
            android:text="2016-5-12"
            android:textColor="@color/qianhuise"
            android:textSize="@dimen/fontsize_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/space_25"
            android:id="@+id/remove_tv"
            android:text="删除缓存"
            android:drawablePadding="@dimen/space_5"
            android:drawableLeft="@drawable/remove"
            android:textColor="@color/red"
            android:textSize="@dimen/fontsize_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>